<Window x:Class="WpfMarcel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMarcel"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel>
            <TextBox Name="Abox" Text="{Binding Path=A}" DockPanel.Dock="Left" Width="100"></TextBox>
            <TextBox Name="Bbox" Text="{Binding Path=B}" DockPanel.Dock="Left" Width="100"></TextBox>
            <Button Click="Button_Click" DockPanel.Dock="Right">Click plzz</Button>
        </DockPanel>
    </Grid>
</Window>
